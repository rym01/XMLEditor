@model System.Data.DataTable
@{
    ViewBag.Title = "Affiche";
}

@section Scripts
{
    @Scripts.Render("~/bundles/xonomyjs")
    <script type="text/javascript">
        $(document).ready(function () {
            var docSpec = {};
            var editors = document.getElementsByClassName("edit");
            var editor = document.getElementById("editor");
            Array.prototype.forEach.call(editors, function (el) {
                console.log(el.textContent);
                Xonomy.render(el.textContent, el, docSpec);
            });
        });
    </script>
}
@section css
{
    @Styles.Render("~/bundles/xonomycss", "~/bundles/homecss")
}
<h2>Affiche</h2>

<table class="table table-striped">
    <tr>
        <th>File Name</th>
        <th>Modified in</th>
        <th>xml Data</th>
    </tr>
    @for (int i = 0; i < Model.Rows.Count; i++)
    {
        <tr>
            <td>@Model.Rows[i][4]</td>
            <td>@Model.Rows[i][2]</td>
            <td id="editor" class="edit">@Model.Rows[i][1]</td>
        </tr>
    }
</table>

